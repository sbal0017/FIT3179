{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Terrorism around the World (2000 - 2015)",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/sbal0017/FIT3179/main/js/ne_110m.topojson",
    "format": {
          "type": "topojson",
          "feature": "ne_110m"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/sbal0017/FIT3179/main/data/countofattacks.csv"
        },
        "key": "Country",
        "fields": ["CountofAttacks"]
      }
    },
    {"calculate": "datum.CountofAttacks + 0.1", "as": "Total Attacks"}
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Total Attacks",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "CountofAttacks", "type": "quantitative"}
    ]
  }

}
